@page
@model Proiect_Medii_Bodea_Denis.Pages.Tari.IndexModel

@{
    ViewData["Title"] = "Tari Provenienta";
}

<h1>Tari</h1>

<p>
    <a asp-page="Create">Adaugati o noua tara</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tara[0].TaraProvenienta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Tara) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TaraProvenienta)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
